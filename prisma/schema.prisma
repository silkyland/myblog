// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  avatar    String   @default("https://via.placeholder.com/300/09f/fff.png")
  email     String   @unique
  password  String
  name      String
  role      String   @default("user")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  posts     Post[]
  Banner    Banner[]
  Page      Page[]
}

model Post {
  id         String   @id @default(cuid())
  title      String
  content    String
  category   Category @relation(fields: [categoryId], references: [id])
  author     User     @relation(fields: [authorId], references: [id])
  authorId   String
  thumbnail  String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  categoryId String
}

model Category {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  posts     Post[]
}

model Banner {
  id         String   @id @default(cuid())
  title      String
  content    String
  author     User     @relation(fields: [authorId], references: [id])
  authorId   String
  thumbnail  String
  link       String
  order      Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  categoryId String
}

model Page {
  id        String   @id @default(cuid())
  title     String
  content   String
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
  thumbnail String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
